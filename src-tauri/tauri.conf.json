{
  "productName": "daily-planner",
  "version": "0.2.2",
  "identifier": "com.dailyplanner.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://127.0.0.1:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Daily Planner",
        "width": 1200,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "label": "main",
        "url": "index.html",
        "visible": true
      },
      {
        "title": "Floating",
        "width": 220,
        "height": 220,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "label": "floating",
        "url": "/?view=floating",
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW51c2VkX3BsYWNlaG9sZGVyX2tleV9mb3JfZGV2ZWxvcG1lbnQK",
      "endpoints": [
        "https://github.com/lqf0624/daily-planner/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg"],
    "category": "Productivity",
    "copyright": "Copyright Â© 2026 lqf0624",
    "shortDescription": "A smart daily planner with AI support",
    "macOS": {
      "files": {
        "icons/icon.icns": "Resources/icon.icns"
      }
    },
    "icon": [
      "icons/icon.icns",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  }
}
